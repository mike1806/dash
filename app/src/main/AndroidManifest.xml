<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dash">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        >

        <activity android:name=".Activ_H.UserDetails"
                  android:parentActivityName=".Activ_H.DbActivity"/>
        <activity android:name=".Activ_A.CalendarActivity"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".Activ_D.PostActivity"
                  android:parentActivityName=".MainActivity" />

        <activity android:name=".Activ_J.CloseActivity"
                  android:parentActivityName=".MainActivity" />

        <activity android:name=".Activ_I.MusicActivity" />

        <activity android:name=".Activ_H.DbActivity"
                  android:parentActivityName=".MainActivity" />

        <activity android:name=".Activ_G.WwwActivity"
                  android:parentActivityName=".MainActivity"/>

        <activity android:name=".Activ_F.HeartActivity"
                  android:parentActivityName=".MainActivity"/>

        <activity android:name=".Activ_E.WeatherActivity"
                  android:parentActivityName=".MainActivity"/>

        <activity android:name=".Activ_C.StatsActivity"
                  android:parentActivityName=".MainActivity"/>

        <activity android:name=".Activ_B.TimerActivity"
                  android:parentActivityName=".MainActivity"/>

        <activity
                  android:name=".MainActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>